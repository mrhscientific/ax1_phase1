# Test case for transient sensitivity
# Short transient simulation with sensitivity enabled
[controls]
eigmode alpha
dt 1.0e-4
t_end 0.01
hydro_per_neut 1
cfl 0.8
output_freq 10
output_file test_transient_sensitivity
run_sensitivity true
sensitivity_output_file test_transient_sensitivity_results
Sn 4

[geometry]
Nshell 10
G 2

[materials]
nmat 1

[material]
1

# group lines: imat g  sig_t  nu_sig_f  chi
[xs_group]
1 1  0.6   0.08  0.6
[xs_group]
1 2  0.5   0.04  0.4

# scatter: imat g' g  sigma_s(g'->g)
[scatter]
1 1 1  0.50
[scatter]
1 1 2  0.08
[scatter]
1 2 2  0.42

# delayed neutrons (6 groups): imat j beta lambda
[delayed]
1 1  0.0030  0.0124
[delayed]
1 2  0.0065  0.0305
[delayed]
1 3  0.0065  0.1110
[delayed]
1 4  0.0015  0.3010
[delayed]
1 5  0.0005  1.1400
[delayed]
1 6  0.0002  3.0100

[eos]
# i   a b c   Acv Bcv
1  1.0e6 0 1  1 0
10 1.0e6 0 1  1 0

